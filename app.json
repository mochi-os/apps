{
	"version": "4.8",
	"label": "app_name",
	"paths": ["apps"],

	"architecture": {"engine": "starlark", "version": 4},
	"execute": ["apps.star"],

	"icons": [
		{"action": "", "label": "app_name", "file": "images/icon.svg"}
	],

	"actions": {
		"": {"file": "web/dist/index.html"},
		"app": {"file": "web/dist/index.html"},
		"routing": {"file": "web/dist/index.html"},
		"routing/classes": {"file": "web/dist/index.html"},
		"routing/services": {"file": "web/dist/index.html"},
		"routing/paths": {"file": "web/dist/index.html"},
		"assets": {"files": "web/dist/assets"},
		"images": {"files": "web/dist/images"},

		"-/list": {"function": "action_list"},
		"-/market": {"function": "action_market"},
		"-/information": {"function": "action_information"},
		"-/version": {"function": "action_version"},
		"-/install/publisher": {"function": "action_install_publisher"},
		"-/install/file": {"function": "action_install_file"},
		"-/install/id": {"function": "action_install_id"},
		"-/updates": {"function": "action_updates"},
		"-/upgrade": {"function": "action_upgrade"},
		"-/version/download": {"function": "action_version_download"},
		"-/available": {"function": "action_available"},
		"-/routing/data": {"function": "action_routing"},

		"-/permissions/list": {"function": "action_permissions_list"},
		"-/permissions/grant": {"function": "action_permissions_grant"},
		"-/permissions/revoke": {"function": "action_permissions_revoke"},
		"-/permissions/set": {"function": "action_permissions_set"},

		"-/user/preferences": {"function": "action_user_apps"},
		"-/user/preferences/app": {"function": "action_user_apps_app"},
		"-/user/preferences/version/set": {"function": "action_user_apps_version_set"},
		"-/user/preferences/routing/set": {"function": "action_user_apps_routing_set"},
		"-/user/preferences/reset": {"function": "action_user_apps_reset"},

		"-/system/list": {"function": "action_system_apps_list"},
		"-/system/get": {"function": "action_system_apps_get"},
		"-/system/version/set": {"function": "action_system_apps_version_set"},
		"-/system/track/set": {"function": "action_system_apps_track_set"},
		"-/system/cleanup": {"function": "action_system_apps_cleanup"},
		"-/system/routing": {"function": "action_system_apps_routing"},
		"-/system/routing/set": {"function": "action_system_apps_routing_set"},

		"-/:id": {"function": "action_view"}
	}
}
